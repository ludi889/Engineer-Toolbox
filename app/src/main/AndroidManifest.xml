<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.github.engineer.toolbox">

    <application
        android:name=".Utils$App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.engineer.toolbox.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.engineer.toolbox.MolierGraphEnthalpyMenuActivity"
            android:label="@string/enthalpy_calculator"/>
        <activity
            android:name="com.github.engineer.toolbox.AbsoluteHumidityActivity"
            android:label="@string/absolute_humidity_calculator"/>
        <activity
            android:name="com.github.engineer.toolbox.HeatOfProcessActivity"
            android:label="@string/heat_of_process_calculator"/>
        <activity
            android:name="com.github.engineer.toolbox.TemperatureConverterMenuActivity"
            android:label="@string/temperature_menu"/>
        <activity
            android:name="com.github.engineer.toolbox.BernoulieEquationMenuActivity"
            android:label="@string/bernoullis_equation_menu"/>
        <activity
            android:name="com.github.engineer.toolbox.PerfectFluidsBernoullisEquation"
            android:label="@string/perfect_fluids_bernoullis_equation_menu"/>
        <activity
            android:name="com.github.engineer.toolbox.ReynoldsNumberActivity"
            android:label="@string/reynolds_number"/>
        <activity
            android:name="com.github.engineer.toolbox.ActualFluidsBernoullisEquationMenuActivity"
            android:label="@string/actual_fluids"/>
        <activity
            android:name="com.github.engineer.toolbox.DarcyWeisbachEquationActivity"
            android:label="@string/darcy_weisbach_equation"/>
        <activity
            android:name="com.github.engineer.toolbox.LocalFlowResistanceActivity"
            android:label="@string/local_flow_resistance"/>
        <activity
            android:name="com.github.engineer.toolbox.DarcyFrictionFactorActivity"
            android:label="@string/darcy_friction_factor"/>
        <activity
            android:name="com.github.engineer.toolbox.HeatFlowResistanceCalculatorActivity"
            android:label="@string/heat_flow_resistance_calculator"/>
        <activity
            android:name="com.github.engineer.toolbox.InfoMenuActivity"
            android:label="@string/info_button"/>
        <activity
            android:name="com.github.engineer.toolbox.AddHeatFlowResistanceMenuActivity"
            android:label="@string/add_heat_flow_resistance"
            android:launchMode="singleTop"
            android:parentActivityName=".HeatFlowResistanceCalculatorActivity"
            tools:targetApi="jelly_bean">
        </activity>
        <activity
            android:name="com.github.engineer.toolbox.EngineerTheoryActivity"
            android:label="Engineer Theory">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="com.github.engineer.toolbox.DetailSubjectActivity"
            android:label="Details"/>
    </application>

</manifest>