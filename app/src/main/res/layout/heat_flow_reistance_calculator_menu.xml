<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/heat_flow_resistance_add_heat_resistance"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"/>

            <TextView
                style="@android:style/TextAppearance.DeviceDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_heat_flow_resistance"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heat_flow_resistance_calculator_warning"
            android:textColor="@android:color/holo_red_dark"/>

        <CheckBox
            android:id="@+id/heat_flow_resistance_heat_flux_density_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heat_flux_denisty_check"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_calculation"/>

        <Spinner
            android:id="@+id/heat_flow_resistance_option_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <LinearLayout
            android:id="@+id/heat_flow_resistance_hidelinearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/heat_flow_resistance_heat_flux_density_edittext"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/heat_flux_density_hint"
                    android:inputType="numberDecimal"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/heat_flow_resistance_heat_flux_edittext"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/heat_flux_hint"
                    android:inputType="numberDecimal"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view"
                        android:layout_width="24dp"
                        android:layout_height="3dp"
                        android:layout_centerVertical="true"
                        android:background="#000000"/>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16sp"
                        android:layout_toRightOf="@id/view"
                        android:text="="/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/heat_flow_resistance_area_edittext"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/area_hint"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/heat_flow_resistance_temperature_difference_edittext"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/delta_temperature_hint"
                    android:inputType="numberDecimal"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="10dp"
                    android:background="#000000"/>

                <EditText
                    android:id="@+id/heat_flow_resistance_heat_resistance_edittext"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/resistance_short_hint"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/heat_flow_resistance_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/submit"/>

        <TextView
            android:id="@+id/heat_flow_resistance_result_text_view"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>

